<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.takement.TakementMenuFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12sp"
            android:gravity="center"
            android:text="Взять из ячейки"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnContainerTakement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6sp"
                android:layout_weight="2"
                android:background="@drawable/back"
                android:padding="16sp"
                android:text="контейнер целиком"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnContainerTakementList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6sp"
                android:layout_weight="3"
                android:background="@drawable/back"
                android:padding="16sp"
                android:text="Журнал"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnProductTakement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6sp"
                android:layout_weight="2"
                android:background="@drawable/back"
                android:padding="16sp"
                android:text="Номенклатуру"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnProductTakementList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6sp"
                android:layout_weight="3"
                android:background="@drawable/back"
                android:padding="16sp"
                android:text="Журнал"
                android:textSize="24sp" />
        </LinearLayout>


    </LinearLayout>

</FrameLayout>